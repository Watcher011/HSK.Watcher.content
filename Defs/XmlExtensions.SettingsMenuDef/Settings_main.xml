<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <XmlExtensions.SettingsMenuDef>
        <defName>Watcher_Content_Settings</defName>
        <modId>Watcher.Content.Settings</modId>
        <tKey>Watcher_MainTitle</tKey>
        <label>Watcher Content Settings</label>
        <settings>
            <li Class="XmlExtensions.Setting.Gap"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Difficulty</text>
                <tKey>Difficulty_Title</tKey>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>AddAlcohol</key>
                <label>Add alcohol to recipes?</label>
				<tKey>AddAlcohol</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>Making crafting medicine more difficult!</tooltip>
            </li>
			   
			 <li Class="XmlExtensions.Setting.Checkbox">
                <key>AddBleeding</key>
                <label>Add Bleeding of Corpses?</label>
				<tKey>AddBleeding</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>add Bleeding of Corpses!</tooltip>
            </li>
              
			  <li Class="XmlExtensions.Setting.GapLine"/> 
			  
              <li Class="XmlExtensions.Setting.Checkbox">
                <key>AddDorBomb</key>
                <label>Add Building a blast door?</label>
				<tKey>AddDorBomb</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>Blowing up raiders is fun!</tooltip>
            </li>
		    
			 <li Class="XmlExtensions.Setting.Checkbox">
                <key>AddMinebox</key>
                <label>Do we sort the mines into boxes or just let them lie around?</label>
				<tKey>AddMinebox</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>Blowing up raiders is fun!</tooltip>
            </li>
		
		<li Class="XmlExtensions.Setting.GapLine"/>
		
			<li Class="XmlExtensions.Setting.Checkbox">
                <key>AddWalltextile</key>
                <label>Adding soft walls?</label>
				<tKey>AddWalltextile</tKey>
                <defaultValue>true</defaultValue>
                <tooltip>adding soft walls?</tooltip>
            </li>
			
			
			
			<li Class="XmlExtensions.Setting.Checkbox">
                <key>AddWallKristal</key>
                <label>Adding glowestone walls?</label>
				<tKey>AddWallKristal</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>adding soft walls?</tooltip>
            </li>
			
			
		    
			<li Class="XmlExtensions.Setting.Checkbox">
                <key>TextureSelection</key>
                <label>Column with a girl and or cat (Texture selection)</label>
				<tKey>TextureSelection</tKey>
                <defaultValue>true</defaultValue>
                <tooltip>Column with a girl and or cat (Texture selection)?</tooltip>
            </li>
		
		 <li Class="XmlExtensions.Setting.GapLine"/>
		 
		<li Class="XmlExtensions.Setting.Checkbox">
                <key>AuraOfTrophyMat</key>
                <label>Add positive effects for rugs?</label>
				<tKey>AuraOfTrophyMat</tKey>
                <defaultValue>true</defaultValue>
                <tooltip>Add positive effects for rugs?</tooltip>
            </li>
		
		<li Class="XmlExtensions.Setting.Checkbox">
                <key>StorTox</key>
                <label>Adding storage of toxic packages?</label>
				<tKey>StorTox</tKey>
                <defaultValue>true</defaultValue>
                <tooltip>Adding storage of toxic packages?</tooltip>
            </li>
			
	 <li Class="XmlExtensions.Setting.GapLine"/>
	 
		<li Class="XmlExtensions.Setting.Checkbox">
                <key>UseAlcoholinLamp</key>
                <label>Use alcohol in a healer's lamp?</label>
				<tKey>UseAlcoholinLamp</tKey>
                <defaultValue>true</defaultValue>
                <tooltip>Use alcohol in a healer's lamp??</tooltip>
            </li>
		
			<li Class="XmlExtensions.Setting.Checkbox">
                <key>UseAlcoholinLampbag</key>
                <label>Disable the bug with the healer's lamp?</label>
				<tKey>UseAlcoholinLampbag</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>my little bug user??</tooltip>
            </li>
		
		
		
		 <li Class="XmlExtensions.Setting.GapLine"/>
	 
		<li Class="XmlExtensions.Setting.Checkbox">
                <key>AddBombardiercocoons</key>
                <label>Add Bombardier to cocoons</label>
				<tKey>AddBombardiercocoons</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>Add Bombardier to beetle cocoons?</tooltip>
            </li>
		
		<li Class="XmlExtensions.Setting.Checkbox">
                <key>AddBombardierRaid</key>
                <label>Add Bombardier to Raid</label>
				<tKey>AddBombardierRaid</tKey>
                <defaultValue>true</defaultValue>
                <tooltip>Add Bombardier to  Raid?</tooltip>
            </li>
			
		 <li Class="XmlExtensions.Setting.GapLine"/>
	 
		<li Class="XmlExtensions.Setting.Checkbox">
                <key>AddTearsOfTheSun</key>
                <label>Replacing the Ashbringer's ammunition with an enhanced version of napalm ?</label>
				<tKey>AddTearsOfTheSun</tKey>
                <defaultValue>true</defaultValue>
                <tooltip>Add napalm - tears of the sun?</tooltip>
            </li>
			
			<li Class="XmlExtensions.Setting.Checkbox">
                <key>AddingOrganTransplantsForAndroids</key>
                <label>Adding organ transplants for androids ?</label>
				<tKey>AddingOrganTransplantsForAndroids</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>Adding organ transplants for androids</tooltip>
            </li>
			
			<li Class="XmlExtensions.Setting.Checkbox">
                <key>AddingRimatomicsRTGRadiation</key>
                <label>Adding Rimatomics RTG Radiation ?</label>
				<tKey>AddingRimatomicsRTGRadiation</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>Adding Rimatomics RTG Radiation</tooltip>
            </li>
		
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.ResetSettings"/>
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>All options require restart to apply</text>
            </li>
        </settings>
    </XmlExtensions.SettingsMenuDef>
</Defs>