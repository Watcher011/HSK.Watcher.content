<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>PSY_Bright</defName>
		<label>Psi resonance</label>
		<labelNoun>Psi resonance</labelNoun>
		<description>Harmonic vibrations of psi waves that the heart emits accelerates the restoration of your energy</description>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
    <minSeverity>0</minSeverity>
		<hediffClass>HediffWithComps</hediffClass>
		 <scenarioCanAdd>false</scenarioCanAdd>
		   <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>0.04</healAmount>
      </li>
    </comps>
		<defaultLabelColor>(1, 0.0, 0.6)</defaultLabelColor>
		<isBad>false</isBad>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>0.01</offset>
					</li>
				</capMods>
				 <statOffsets>
               <PsychicSensitivity>2</PsychicSensitivity>
               <MeditationFocusGain>1.9</MeditationFocusGain>
               <PsychicEntropyRecoveryRate>0.1</PsychicEntropyRecoveryRate>
                </statOffsets>
				<hungerRateFactor>2.2</hungerRateFactor>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>PSY_noise</defName>
		<label>Psi noise</label>
		<labelNoun>Psi noise</labelNoun>
		<description>The disgusting buzzing noise prevents me from concentrating.</description>
		<initialSeverity>1</initialSeverity>
		<maxSeverity>1</maxSeverity>
    <minSeverity>0</minSeverity>
		<hediffClass>HediffWithComps</hediffClass>
		 <scenarioCanAdd>false</scenarioCanAdd>
		   <comps>
      <li Class="HediffCompProperties_SelfHeal">
        <healAmount>0.04</healAmount>
      </li>
    </comps>
		<defaultLabelColor>(1, 0.0, 0.6)</defaultLabelColor>
		<isBad>false</isBad>
		<stages>
			<li>
			  
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>0.01</offset>
					</li>
				</capMods>
				 <statOffsets>
               <PsychicSensitivity>-2</PsychicSensitivity>
               <MeditationFocusGain>-1.9</MeditationFocusGain>
               <PsychicEntropyRecoveryRate>-0.1</PsychicEntropyRecoveryRate>
                </statOffsets>
			</li>
		</stages>
	</HediffDef>
	
</Defs>
